<Window
    x:Class="WPFMvvM.View.PromptWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="clr-namespace:WPFMvvM.View"
    xmlns:vm="clr-namespace:WPFMvvM.ViewModel"
    Title="{Binding Title}"
    d:DataContext="{d:DesignInstance Type=vm:PromptWindowModel}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding Title}" Margin="20" />
        <Button Command="{Binding CloseCommand}" Content="Close" Margin="20" />
        <Button Command="{Binding ThrowExceptionCommand}" Content="Throw exception" Margin="20" />
    </StackPanel>
</Window>
